<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.placement2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MotionLayout"></activity>
        <activity
            android:name=".PlacementDetailsActivity"
            android:parentActivityName=".PlacementPage" />
        <activity android:name=".ViewApplicationDetails" />
        <activity android:name=".AcademicProfile" />
        <activity android:name=".Help" />
        <activity android:name=".PlacementPage" />
        <activity android:name=".ApplicationPage" />
        <activity android:name=".HomePage" />
        <activity android:name=".VerifyPhoneNo" />
        <activity android:name=".UserProfile" />
        <activity android:name=".SignUp" />
        <activity
            android:name=".Splashscreen"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>